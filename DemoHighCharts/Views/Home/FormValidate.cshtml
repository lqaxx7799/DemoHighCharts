    });

    $('#formRegister').submit(function (event) {
        event.preventDefault;
    }).validate({
        rules: {
            txtName: {
                required: true,
                minlength: 5
            },
            txtEmail: {
                required: true,
                email: true
            },
            txtPassword: {
                required: true,
                minlength: 8
            },
            txtConfirmPassword: {
                required: true,
                minlength: 8,
                equalTo: '#txtPassword'
            },
            rdiGender: {
                required: true
            }
        },
        messages: {
            txtName: {
                required: 'Name is required!',
                minlength: 'Name must be longer than 5 characters!'
            },
            txtEmail: {
                required: 'Email is required!',
                email: 'Invalid email!'
            },
            txtPassword: {
                required: 'Password is required!',
                minlength: 'Password must be longer than 8 characters!'
            },
            txtConfirmPassword: {
                required: 'Password need to be confirmed!',
                minlength: 'Confirming password must be longer than 8 characters!',
                equalTo: 'Confirming password does not match'
            },
            rdiGender: {
                required: 'Gender is required'
            }
        },
        errorPlacement: function (error, element) {
            error.addClass('text-danger');
            if (element.is(':radio')) {
                error.appendTo(element.parents('#genderField'));
            } else {
                error.insertAfter(element);
            }
        },
        submitHandler: function (form) {
            $.ajax({
                type: 'POST',
                url: '/api/Statistic',
                data: new FormData($(form)),
                processData: false,
                contentType: false,
                success: function (data) {
                    $("#registerResult").html(data.message);
                }
            });
        },
        invalidHandler: function () {
            $("#registerResult").html('');
        }
    });

</script>

